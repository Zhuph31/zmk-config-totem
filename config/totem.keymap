            bindings = <
       &none   &kp N7             &kp N8        &kp N9                 &none    &none     &none                    &none               &none           &none
       &kp N0  &mt LGUI NUMBER_4  &mt LCTRL N5  &mt LSHIFT NUMBER_6    &none    &kp LEFT  &mt RSHIFT DOWN          &mt RCTRL UP_ARROW  &mt RGUI RIGHT  &none
&none  &none   &kp NUMBER_1       &kp NUMBER_2  &mt LEFT_ALT NUMBER_3  &none    &kp HOME  &mt RIGHT_ALT PAGE_DOWN  &kp PAGE_UP         &kp END         &none  &none
                                  &none         &none                  &none    &none     &none                    &none
            >;
        };

        symbol_layer {
            bindings = <
       &none                  &kp AMPERSAND    &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp TILDE       &kp GRAVE  &kp LEFT_BRACE  &kp LBKT           &kp RBKT   &kp RIGHT_BRACE
       &kp RIGHT_PARENTHESIS  &kp DOLLAR       &kp PERCENT   &kp CARET             &kp QUESTION    &kp COLON  &kp MINUS       &kp UNDERSCORE     &kp EQUAL  &kp PLUS
&none  &none                  &kp EXCLAMATION  &kp AT_SIGN   &kp HASH              &kp FSLH        &kp SEMI   &kp SQT         &kp DOUBLE_QUOTES  &kp BSLH   &kp PIPE         &none
                                               &none         &none                 &none           &none      &none           &none
